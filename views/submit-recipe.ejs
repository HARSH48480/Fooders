<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold"> Submit Your Recipe </h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead"> Share your amazig recipies with thousands of chefs accross the world. Fill our form to get started.  </p>
    </div>
</div>




<div class="row justify-content-center">
    <% if(infoSubmitObj !=''){ %>
        <div class="alert col-8 alert-success" role="alert">
            <%= infoSubmitObj %>
          </div>
          <% } %>
    <% if(infoErrorsObj !=''){ %>
            <div class="alert col-8 alert-danger" role="alert">
                <%= infoErrorsObj[0].message %>
              </div>
              <% } %>
    <div class="col-8">
        

        <form action="/submit-recipe" enctype="multipart/form-data " method="POST">
         
            <div class="row g-3">

             <div class="col-12">
                <label class="form-data" for="email">Email</label>
                <input type="email" name="email" id="email" class="form-control" required>
             </div>

             <div class="col-12">
                <label class="form-data" for="name">Recipe Name</label>
                <input type="text" name="name" id="name" class="form-control" required >
             </div>

             <div class="col-12">
                <label class="form-data" for="description">Description</label>
                <textarea name="description" id="description" class="form-control" cols="30" rows="10" required></textarea>
             </div>
              
             <div class="col-12">
                <label class="form-data" for="ingredients">Ingredients</label>
                <small>Example: 2 tablespoons Spices</small>
                <div class="ingredientList">
                    <div class="ingredientDiv mb-1">
                        <input type="text" name="ingredients"  class="form-control" required>
                    </div>
                </div>
                
             </div>

             <div class="col-12">
                <button type="button" class="btn btn-outline-primary " id="addIngredientsBtn">+ Ingredient</button>
             </div>

             <div class="col-12">
                <label for="category">Select Category</label>
                <select class="form-select form-control " id="category" name="category" aria-label="Category" required>
                    <option selected>Select Category</option>
                    <option value="Thai"> Thai </option>
                    <option value="Indian"> Indian </option>
                    <option value="American "> American  </option>
                    <option value="Italian"> Italian </option>
                    <option value="Japanese"> Japanese </option>
                    <option value="Mexican"> Mexican </option>
                </select>
             </div>
             
             <div class="col-12">
                <label for="image">Recipe Image</label>
                <input type="file" class="form-control" name="image" id="image" accept="image/*" required >
             </div>

             <div class="col-12">
                <button type="submit" class="btn btn-primary">Submit Recipe</button>
             </div>
             
            </div>



        </form>

    </div>
</div>